<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycle_view_row_height"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark"
        android:weightSum="5">

        <TextView
            android:id="@+id/instrument_row_name_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Ripple"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_text" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/instrument_row_price_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="1.5"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="123.321"
            android:textColor="@android:color/white"
            android:textSize="@dimen/medium_text" />


        <ImageButton
            android:id="@+id/instrument_remove_image_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_remove"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/instrument_select_check_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@drawable/custom_checkbox"
            android:visibility="gone" />
    </LinearLayout>
</android.support.v7.widget.CardView>