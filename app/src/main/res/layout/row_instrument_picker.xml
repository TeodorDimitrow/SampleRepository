<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/RecyclerRowCardView">

    <LinearLayout style="@style/RecycleRowLinearLayout">

        <TextView
            android:id="@+id/instrument_picker_row_name_text"
            style="@style/RecycleRowTextView"
            android:layout_weight="2" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5" />

        <TextView
            android:id="@+id/instrument_picker_row_price_text"
            style="@style/RecycleRowTextView"
            android:layout_margin="15dp"
            android:layout_weight="1.5"
            android:background="@android:color/darker_gray" />

        <CheckBox
            android:id="@+id/instrument_picker_select_check_box"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@drawable/custom_checkbox" />
    </LinearLayout>
</android.support.v7.widget.CardView>