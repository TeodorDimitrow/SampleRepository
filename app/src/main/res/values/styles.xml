<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="UserCredentialsEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">@dimen/padding_login_screen_all</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="HorizontalLineSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_all_line_separator</item>
        <item name="android:background">@color/white_shade</item>
    </style>

    <style name="VerticalLineSeparator">
        <item name="android:layout_width">@dimen/width_all_line_separator</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white_shade</item>
    </style>

    <style name="InstrumentsTopToolbarImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecyclerRowCardView" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/recycle_view_row_height</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
    </style>

    <style name="RecycleRowLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:weightSum">5</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="RecycleRowTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white_shade</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

</resources>
